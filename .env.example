# Environment variables for LDAPGuard

# PostgreSQL
POSTGRES_PASSWORD=changeme

# Application
# APP_NAME=LDAPGuard
# APP_VERSION=1.0.0
DEBUG=false

# Application Security
SECRET_KEY=your-secret-key-change-in-production
ENCRYPTION_KEY=your-encryption-key-32-bytes-min
# ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Connection
DATABASE_URL=postgresql+asyncpg://ldapguard:changeme@postgres:5432/ldapguard

# Redis
REDIS_URL=redis://redis:6379

# LDAP Configuration (optional - can be configured per server via API)
# LDAP_SERVER=ldap.example.com
# LDAP_PORT=389
# LDAP_USE_SSL=false
# LDAP_BASE_DN=dc=example,dc=com
# LDAP_BIND_DN=cn=admin,dc=example,dc=com
# LDAP_BIND_PASSWORD=admin_password

# Backup Settings
BACKUP_DIR=/app/backups
BACKUP_RETENTION_DAYS=30
INCREMENTAL_BACKUP_ENABLED=true

# Webhooks (optional)
WEBHOOK_ENABLED=false
# WEBHOOK_URL=https://your-webhook-endpoint.com/notify

# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Application
# (DEBUG is set above)
